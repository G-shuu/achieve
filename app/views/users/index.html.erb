<div class="container">
  <h2>ユーザー</h2>
  <% @users.each do |user| %>
    <div class="container-child col-md-2 col-sm-4 col-xs-6">
      <%= link_to user_path(user) do %>
        <%= profile_img(user) %>
        <%= user.name %>
      <% end %>
      <div class="email"><%= user.email %></div>
      <%= render 'follow_form', user: user %>
    </div>
  <% end %>
</div>
